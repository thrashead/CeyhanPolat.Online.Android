<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FrSiir"
    tools:showIn="@layout/layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSiir"
                android:layout_width="237dp"
                android:layout_height="153dp"
                android:background="@mipmap/sliderframe"
                android:padding="17dp" />

            <TextView
                android:id="@+id/lblBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBaslik"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblSiir"
                android:layout_width="200dp"
                android:textColor="@color/colorMetin"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Åžehir : "
                    android:textColor="@color/colorBaslik"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblSehir"
                    android:layout_width="100dp"
                    android:textColor="@color/colorMetin"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Tarih : "
                    android:textColor="@color/colorBaslik"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblTarih"
                    android:layout_width="100dp"
                    android:textColor="@color/colorMetin"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>