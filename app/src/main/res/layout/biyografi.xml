<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FrBiyografi"
    tools:showIn="@layout/layout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:paddingBottom="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:background="@mipmap/sliderframe"
                android:id="@+id/imgBiyografi"
                android:layout_width="237dp"
                android:layout_height="153dp"
                android:padding="17dp"/>

            <TextView
                android:id="@+id/lblBaslik"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorBaslik"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lblBiyografi"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorMetin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>